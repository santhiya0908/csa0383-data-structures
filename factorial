#include<stdio.h>
#include<conio.h>
int factorial(int);
int main()
{
int num,f;
clrscr();
printf("enter the number");
scanf("%d",&num);
f=factorial(num);
printf("the factorial of a given number is %d is %d",num,f);
getch();
return 0;
}
int factorial(int number)
{
if(number==0||number==1)
return 1;
else
return(number*factorial(number-1));
}
